BEGIN INTEGER X, N, SUM, MAX;

IF LASTITEM THEN OUTTEXT ("NULL LIST") ELSE
BEGIN SUM:=MAX:=ININT;
N:=1;

WHILE  LASTITEM DC
BEGIN X:=ININT;
N:=N+1;
IF X > MAX THEN MAX:=X;
SUM:=SUM+X;
END;
OUTTEXT("LIST LENGTH = ");      OUTINT (N, 6);
OUTTEXT(",            HIGHEST = ");     OUTINT (MAX, 6);
OUTTEXT(",      AVERAGE = ");   OUTFIX (SUM/N, 2,, 8);

END;
OUTIMAGE;
END
